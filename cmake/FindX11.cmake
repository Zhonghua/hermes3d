# X11
#

FIND_FILE(X11_LIBRARY libX11.a ${X11_ROOT}/lib /usr/lib64/ /usr/lib/ /usr/X11R6/lib64/ /usr/X11R6/lib/) 

IF (X11_LIBRARY)
	SET(X11_FOUND TRUE)
ENDIF (X11_LIBRARY)


IF (X11_FOUND)
	IF (NOT X11_FIND_QUIETLY)
		MESSAGE(STATUS "Found X11: ${X11_LIBRARY}")
	ENDIF (NOT X11_FIND_QUIETLY)
ELSE (X11_FOUND)
	IF (X11_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find X11")
	ENDIF (X11_FIND_REQUIRED)
ENDIF (X11_FOUND)

